@model EquipmentDowntime

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<br />
<h2 class="text-info">Добавить простой оборудования</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="EquipmentName"></label>
            <input asp-for="EquipmentName" class="form-control"/>
            <span asp-validation-for="EquipmentName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DowntimeStart"></label>
            <input asp-for="DowntimeStart" class="form-control" placeholder="Введите начало простоя"/>
            <span asp-validation-for="DowntimeStart" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DownTimeEnd"></label>
            <input asp-for="DownTimeEnd" class="form-control" placeholder="Введите конец простоя"/>
            <span asp-validation-for="DownTimeEnd" class="text-danger"></span>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">Сохранить</button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Возврат к списку</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function () {
            // Flatpickr
            $('#DowntimeStart').flatpickr({ dateFormat: 'Y-m-d H:i', enableTime: true, time_24hr: true, maxDate: "today" })
            $('#DownTimeEnd').flatpickr({ dateFormat: 'Y-m-d H:i', enableTime: true, time_24hr: true, maxDate: "today" })
        });
    </script>
}